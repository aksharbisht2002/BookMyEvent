<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.NewPassword"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bookmyeventlogo"
        android:transitionName="applogo"
        />
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset\nPassword"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:layout_marginTop="-20dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/bungee_regular"
        android:textColor="@color/black"

        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="-30dp"
      >
      <TextView
          android:id="@+id/msg"
          android:elevation="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="if you forget it again dont worry we will meet again"
          android:textSize="14sp"
          android:fontFamily="@font/bungee_regular"
          android:paddingLeft="10dp"
          android:textColor="@color/dark_grey"
          />
      <TextView
          android:id="@+id/changepassForMail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:fontFamily="@font/bungee_regular"
          android:paddingLeft="10dp"
          android:textColor="@color/dark_grey"
          android:layout_marginTop="-10dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:padding="20sp"
          android:orientation="vertical"
          >

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/field_newpassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:passwordToggleEnabled="true"
              android:layout_marginBottom="10dp"
              style="@style/ShapeAppearanceOverlay.MaterialAlertDialog.Material3"
              >
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/newpassword"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:hint="  New Password "
                  android:inputType="textPassword"
                  android:drawableLeft="@drawable/baseline_lock_24"/>

          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/field_confirmpassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:passwordToggleEnabled="true"
              android:layout_marginBottom="10dp"
              style="@style/ShapeAppearanceOverlay.MaterialAlertDialog.Material3"
              >
              <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/confirmpassword"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:hint="  Confirm Password "
                  android:inputType="textPassword"
                  android:drawableLeft="@drawable/baseline_lock_24"/>

          </com.google.android.material.textfield.TextInputLayout>


      </LinearLayout>
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          >
          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/submit_btn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Submit"
              android:textAllCaps="true"
              android:textSize="14sp"
              android:padding="15dp"
              android:textColor="@color/white"
              android:gravity="center"
              android:background="@drawable/btn_style1"
              />
          <ProgressBar
              android:id="@+id/progress_bar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:backgroundTint="@color/brown"
              android:visibility="invisible"
              />
      </FrameLayout>
  </LinearLayout>

  </LinearLayout>
