<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ForgetPassword"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bookmyeventlogo"
        android:transitionName="applogo"
        />
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:layout_marginTop="-20dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/bungee_regular"
        android:textColor="@color/black"

        />
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't worry! It happens. Please enter the detail assosiate with your account"
        android:textSize="14sp"
        android:fontFamily="@font/bungee_regular"
        android:paddingLeft="10dp"
        android:textColor="@color/dark_grey"
        android:layout_marginTop="-25dp"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:layout_marginBottom="20dp"
         android:padding="20sp"

         >
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="5dp"
             android:src="@drawable/baseline_alternate_email_24"
             android:layout_gravity="center"
             />
         <EditText
              android:id="@+id/phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="10dp"
             android:hint="Mobile Number "
             android:inputType="phone"
             />


     </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@drawable/btn_style1"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center"
        android:backgroundTint="@color/brown"
        android:visibility="invisible"
        />
</FrameLayout>
</LinearLayout>